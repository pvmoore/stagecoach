/**
 * magic!!
 * name "test if"
 * tags [if]
 * args []
 * errors []
 */

public fn main() {
    // if with then
    int a = 1
    if(a is 1) {
        a = 2
    }
    assert(a is 2)
    
    // if with then and else branch
    int a2 = 1
    if(a2 is 1) {
        a2 = 2
    } else {
        a2 = 3
    }
    assert(a2 is 2)

    // if with then and else branch without braces
    int a3 = 1
    if(a3 is 2) a3 = 2 else a3 = 3
    assert(a3 is 3)
    
    // if expression
    int b = if(2 is 2) 3 else 4
    assert(b is 3)

    int c = if(false) {
        int d = 3
        d + 10
    } else {
        int e = 4
        e + 20
    }
    assert(c is 24)
}
